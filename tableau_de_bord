#define DELAY 500 // Delay between two measurements in ms
#define VIN 5 // V power voltage
#define R 10000 //ohm resistance value
#include "DHT.h"
#include <LiquidCrystal.h>

DHT dht(6, DHT11);
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

const int sensorPin = A0;
int sensorVal;
int lux;

// DÃ©finition de la fonction sensorRawToPhys
int sensorRawToPhys(int raw){
  // Conversion rule
  float Vout = float(raw) * (VIN / float(1024));
  float RLDR = (R * (VIN - Vout))/Vout;
  int phys=500/(RLDR/1000);
  return phys;
}

void setup() {
   dht.begin();
   Serial.begin(9600);
   lcd.begin(16, 2);   
   pinMode(7, OUTPUT);  
   pinMode(8, OUTPUT);   
   pinMode(9, OUTPUT);  
   pinMode(10, OUTPUT);    
}

void loop() {
   sensorVal = analogRead(sensorPin);
   lux=sensorRawToPhys(sensorVal);
   float h = dht.readHumidity();
   float t = dht.readTemperature();


   if ( ((t) > 10) && ((t) < 18) )
{
   digitalWrite(7, HIGH);
}
   if ( ((t) > 19) && ((t) < 21) )
{
   digitalWrite(10, HIGH);
}
   if ( ((h)>30) && ((h)<70) ) {
   digitalWrite(8, HIGH);
}  else {
   digitalWrite(9, HIGH);
}

   lcd.setCursor(0,0);
   lcd.print("Humiditee: ");
   lcd.print(h);
   lcd.setCursor(0,1);
   lcd.print("Temperature: ");
   lcd.print(t);
   delay(2000);
   lcd.clear();

   lcd.print(F("Valeur brute du capteur = "));
   lcd.println(sensorVal);
   lcd.print(F("Valeur physique du capteur = "));
   lcd.print(lux);
   lcd.println(F(" lumen"));
   delay(DELAY);
   delay(900);
      lcd.scrollDisplayLeft();
      delay(900);      
   delay(1400);
   lcd.clear();

}
